datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  homeDirectory String?
  maildir       String?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
}
